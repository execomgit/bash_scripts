#!/bin/bash

rpool=tank
[ ! $3 ] || rpool=$3

if [ -z ${1+x} ]; then
	echo -e "new share name is needed"
	exit
fi

if [ ! -f "/sbin/zfs" ]; then
	echo -e ZFS not install, aborting
	exit
fi

if [ ! -d "/$rpool" ]; then
	echo -e zpool $rpool not created, aborting
	exit
fi

if [ ! -z ${2+x} ]; then 
    compression=$2
else 
    compression=off
fi

zfs_create_share() {
	if [ ! -d "/$1" ]; then 
		echo -e Creating $1
		sudo zfs create -o xattr=sa $1
	fi

	echo -e $1 set compression=$2
	sudo zfs set compression=$2 $1

	sudo chgrp users /$1
	sudo chmod 775 /$1
}

smb_create() {
	if ! grep -Fxq "[$1]" /etc/samba/smb.conf; then
		echo -e Adding Samba Share: $1
		
		echo -e [$1] 			| sudo tee -a /etc/samba/smb.conf
		echo -e path = /$rpool/Shares/$1	| sudo tee -a /etc/samba/smb.conf
		echo -e force group = users	| sudo tee -a /etc/samba/smb.conf
		echo -e read only = No		| sudo tee -a /etc/samba/smb.conf
		echo -e create mask = 0775	       	| sudo tee -a /etc/samba/smb.conf
		echo -e force create mode = 0775 	| sudo tee -a /etc/samba/smb.conf
		echo -e directory mask = 0775      | sudo tee -a /etc/samba/smb.conf
		echo -e force directory mode = 0775| sudo tee -a /etc/samba/smb.conf
		echo -e guest ok = Yes		| sudo tee -a /etc/samba/smb.conf
		
		sudo /etc/init.d/samba restart
	fi	
}

zfs_create_share $rpool/Shares $compression
zfs_create_share $rpool/Shares/$1 $compression
smb_create $1
