#!/bin/bash

# Add Flatpak Repo
# ${1} = remote, ${2} = https://remote.example.com/
function add_flatpak_repo() {
	echo -e_message header "Starting 'add_flatpak_repo' function"
	# Check if already added
	flatpak remotes | grep ${1} &> /dev/null
	# If repo is added
	if [ $? = 0 ]; then
		echo -e_message info "Repository already added."
		whiptail --msgbox "The ${1} repository is already added." 8 56
	else
		# Add repository
		echo -e_message info "Adding flatpak repository..."
		flatpak remote-add --if-not-exists ${1} ${2}
		echo -e_message success "Repository added."
		whiptail --title "Finished" --msgbox "The '${1}' repository has been added." 8 56
	fi
}

# Add Launchpad PPA
# ${1} = Name, ${2} = launchpad-user/ppa-name
function add_launchpad_ppa() {
	echo -e_message header "Starting 'add_launchpad_ppa' function"
	# Check if PPA already added
	if ! grep -q "^deb .*${2}" /etc/apt/sources.list /etc/apt/sources.list.d/*; then
		# draw window
		if (whiptail \
			--title "Add PPA Repository" \
			--yesno "The ${1} PPA repository (${2}) is not present on your system. \n\nWould you like to add it to continue? " 10 64) then
			# Add repository
			echo -e_message info "Adding ${1} PPA repository..."
			superuser_do "add-apt-repository -y ppa:${2}"
			# Update repository information
			superuser_do "apt update -qq -y"
			# Done
			echo -e_message success "Repository added."
		else
			# Cancelled
			echo -e_message info "Addition of ${1} repository cancelled."
			$3
		fi
	else 
		echo -e_message info "${1} repository already added."
	fi
}