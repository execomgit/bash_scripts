#!/bin/bash

# Script to build a 'ROM' with pydroid
# opts for system,cache,recovery, and boot (all optional)
set -x
show_help()
{
	echo -e "$0 [options]"
	echo -e "        options:"
	echo -e "               -s: Build system image"
	echo -e "               -c: Build cache image"
	echo -e "               -b: Build boot image"
	echo -e "               -r: Build recovery image"
    echo -e "               -t: If an odin image should be created from the images. Requires <name>"
	echo -e ""
}

build-image()
{
	sudo pydroid $1 pack . $1.img
}

BUILD_BOOT=false
BUILD_CACHE=false
BUILD_RECOVERY=false
BUILD_SYSTEM=false

if [[ $# < 1 ]]; then
    show_help
fi

OPTIND=1
while getopts ":bcrst:" opt; do
    case $opt in
        b) BUILD_BOOT=true ;;
        c) BUILD_CACHE=true ;;
        r) BUILD_RECOVERY=true ;;
        s) BUILD_SYSTEM=true ;;
        t) ODIN_TAR_NAME=$OPTARG ;;
    esac
done

shift $((OPTIND-1))
IMAGES=()
if [ $BUILD_BOOT == true ]; then
    echo -e "Building boot.img...."    
    build-image boot
    IMAGES+=('boot.img')
    echo -e ""
fi

if [ $BUILD_CACHE == true ]; then
    echo -e "Building cache.img...."
    build-image cache
    IMAGES+=('cache.img')
    echo -e ""
fi

if [ $BUILD_RECOVERY == true ]; then
    echo -e "Building recovery.img...."
    build-image recovery
    IMAGES+=('recovery.img')
    echo -e ""
fi

if [ $BUILD_SYSTEM == true ]; then
    echo -e "Building system.img...."
    build-image system
    IMAGES+=('system.img')
    echo -e ""
fi

if [ ${#IMAGES[@]} > 0 ]; then
    create-odin -mv -n $ODIN_TAR_NAME $(echo -e ${IMAGES[@]})
fi
